{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "AMD",
        "outDir": "./built",
        "allowJs": true,
        "target": "es5",
        "allowUnreachableCode": false,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "typeRoots": [ "./typings" ],
        "outFile": "./built/combined.js",
        "lib": [
            "es2017"
        ],
        "moduleResolution": "node",
        "baseUrl": "./resources",
        "paths": {
            "style/*": ["./css/style/*"],
            "@/*": ["*"],
            "components/*": ["./js/components/*"],
            "domains/*": ["./js/domains/*"],
            "routes/*": ["./js/routes/*"],
            "services/*": ["./js/services/*"]
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "./plugins/**/*",
        "./typings/**/*",
        "./built/**/*",
        "node_modules"
    ]
}
