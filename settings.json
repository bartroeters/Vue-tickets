{
    // Basic editor settings
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    // ESLint settings
    "eslint.run": "onType",
    "eslint.workingDirectories": ["./"],
    "eslint.nodePath": "./node_modules",
    "eslint.alwaysShowStatus": true,
    "eslint.validate": ["vue"],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // Vue settings
    "volar.inlayHints.eventArgumentInInlineHandlers": false,
    "volar.codeLens.pugTools": false,
    "volar.codeLens.scriptSetupTools": false,
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // Javascript settings
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // PHP formatter settings
    "php.validate.enable": true,
    "php.suggest.basic": false,
    "files.exclude": {
        // "**/public/": true
    },
    "[php]": {
        "editor.defaultFormatter": "valeryanm.vscode-phpsab"
    },
    "phpsab.fixerEnable": true,
    "phpsab.snifferEnable": true,
    "phpsab.snifferMode": "onType",
    "git.decorations.enabled": false,
    "git.annotations.enabled": "none",
    "gitlens.blame.line.enabled": false,// was working in previous versions
    "gitlens.currentLine.enabled": false,// in modern version
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false
}
